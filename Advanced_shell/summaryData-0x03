#!/bin/bash

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through all JSON files
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/') # Capitalize
    height=$(jq -r '.height' "$file")                # in decimeters
    weight=$(jq -r '.weight' "$file")                # in hectograms

    # Convert to meters and kilograms
    height_m=$(awk "BEGIN { printf \"%.2f\", $height / 10 }")
    weight_kg=$(awk "BEGIN { printf \"%.1f\", $weight / 10 }")

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

# Display CSV path
echo "CSV Report generated at: $OUTPUT_FILE"
echo

# Print CSV contents
cat "$OUTPUT_FILE"
echo

# Calculate averages
awk -F, 'NR>1 { total_h += $2; total_w += $3; count++ }
END { printf "Average Height: %.2f m\nAverage Weight: %.2f kg\n", total_h/count, total_w/count }' "$OUTPUT_FILE"
